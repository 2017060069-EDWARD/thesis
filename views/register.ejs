<body style="background-image: url(../images/AI\ REG.jpg);
height: 100vh;
background-size: cover;
background-position: center;">
    
<div class="login-page" style="width: 360px;
padding: 10% 0 0;
margin: auto;">

    <div class="form" style="position: relative;
    z-index: 1;
    background: rgba(161, 165, 160, 0.664);;
    max-width: 360px;
    margin:0 auto 100px;
    padding: 45px;
    text-align: center;">
   <%- include ("./partials/messages"); %>
        <form class="register-form" action="/users/register" method="POST">
            <input type="name"
            id="name"
            name="name"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" style="font-family: Roboto, sans-sarif; outline: 1;background: #f2f2f2;width: 100%;border: 0; margin: 0 0 15px;padding: 15px; box-sizing: border-box;font-size: 14px;" type="text" name="name" placeholder="name"/>

            <input type="email"
            id="email"
            name="email"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" style="font-family: Roboto, sans-sarif; outline: 1; background: #f2f2f2; width: 100%; border: 0; margin: 0 0 15px; padding: 15px; box-sizing: border-box; font-size: 14px;" type="text" placeholder="email"/>
           
            <input type="password"
            id="password"
            name="password"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" style="font-family: Roboto, sans-sarif;outline: 1;background: #f2f2f2;width: 100%; border: 0; margin: 0 0 15px; padding: 15px; box-sizing: border-box; font-size: 14px;" type="text" placeholder="password"/>

            <input type="password"
            id="password2"
            name="password2"
            placeholder="Confirm Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" style="font-family: Roboto, sans-sarif;outline: 1;background: #f2f2f2;width: 100%; border: 0; margin: 0 0 15px; padding: 15px; box-sizing: border-box; font-size: 14px;" type="text" placeholder=" reenterpassword"/>
            
            <button type="submit" style=" font-family: Roboto, sans-serif; text-transform: uppercase; outline: 0; background: lightslategrey; width: 100%; border: 0; padding: 15px; color:#FFFFFF ; font-size: 14px; cursor: pointer;">Create</button>
            <p class="message" style="  margin: 15px 0 0;
            color: aliceblue;">Already Registered?<a href="/users/login" style="color: rgb(41, 42, 43);
                text-decoration: none;">Login</a></p>
        </form>

